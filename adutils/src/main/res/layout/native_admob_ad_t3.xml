<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/nad_bg"
    android:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/ad_notification_view3"
                android:layout_width="@dimen/gnt_ad_indicator_width"
                android:layout_height="@dimen/gnt_ad_indicator_height"
                android:background="@drawable/gnt_rounded_corners_shape"
                android:gravity="center"
                android:text="Ad"
                android:textColor="@color/gnt_ad_green"
                android:textSize="@dimen/gnt_ad_indicator_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="top|end"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toStartOf="@+id/ad_media"
                app:layout_constraintTop_toTopOf="@+id/ad_media" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:textColor="@color/headLineColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                tools:text="@tools:sample/cities" />


            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="3"
                android:textColor="@color/headLineColor"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/headline"
                app:layout_constraintTop_toBottomOf="@+id/headline" />

            <TextView
                android:id="@+id/ad_advertiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:lines="1"
                android:textColor="@color/color_ads"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ad_price"
                app:layout_constraintTop_toTopOf="@+id/ad_store" />

            <TextView
                android:id="@+id/ad_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/color_ads"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/ad_stars"
                app:layout_constraintTop_toTopOf="@+id/ad_stars" />

            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/ad_store"
                app:layout_constraintTop_toBottomOf="@+id/body" />

            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/body"
                app:layout_constraintTop_toBottomOf="@+id/body" />

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_notification_view3"
                app:layout_constraintWidth_percent=".5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/call_to_action"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_margin="5dp"
            android:background="@drawable/ads_bg_lib"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="165dp" />

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>